{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Administrateur{% endblock %}

{% block body %}
<div class="min-h-screen bg-background-light dark:bg-background-dark p-8">
    <div class="max-w-7xl mx-auto">
        <div class="mb-8 flex justify-between items-center">
            <div>
                <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">
                    Tableau de bord Administrateur
                </h1>
                <p class="text-gray-600 dark:text-gray-400">
                    Bienvenue, {{ user.prenom }} {{ user.nom }}
                </p>
            </div>
            <a href="{{ path('app_logout') }}" class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors">
                Déconnexion
            </a>
        </div>

        <div class="bg-white dark:bg-surface-dark rounded-lg p-8 shadow-lg border border-gray-200 dark:border-surface-border">
            <p class="text-gray-700 dark:text-gray-300">
                Vous êtes connecté en tant qu'<strong>Administrateur</strong>.
            </p>
            <p class="mt-4 text-gray-600 dark:text-gray-400">
                Email: {{ user.email }}
            </p>
        </div>
    </div>
</div>
{% endblock %}