<!DOCTYPE html>
<html class="dark" lang="fr">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>Enseignant Dashboard - {{ app.user.prenom }} {{ app.user.nom }}</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700;900&family=Spline+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38e07b",
                        "primary-dark": "#2ec268",
                        "background-dark": "#111714",
                        "surface-dark": "#1d2621",
                        "border-dark": "#29382f",
                    },
                    fontFamily: {
                        display: ["Spline Sans", "Noto Sans", "sans-serif"],
                        body: ["Noto Sans", "sans-serif"]
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-background-dark text-white h-screen flex overflow-hidden">

<!-- SIDEBAR -->
<aside class="hidden lg:flex flex-col w-72 h-full border-r border-border-dark bg-background-dark p-6">
    <h2 class="text-xl font-bold mb-10">School RMS</h2>

    <nav class="flex-1 space-y-2">
        <a class="flex items-center gap-4 px-4 py-3 rounded-full bg-primary/10 text-primary">
            <span class="material-symbols-outlined">dashboard</span> Dashboard
        </a>
        <a class="flex items-center gap-4 px-4 py-3 rounded-full text-gray-400 hover:bg-surface-dark">
            <span class="material-symbols-outlined">class</span> Classes
        </a>
        <a class="flex items-center gap-4 px-4 py-3 rounded-full text-gray-400 hover:bg-surface-dark">
            <span class="material-symbols-outlined">grade</span> Notes
        </a>
    </nav>
</aside>

<!-- MAIN -->
<main class="flex-1 overflow-y-auto p-8 space-y-10">

    <!-- WELCOME -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-black">
                Bonjour, {{ app.user.prenom }} {{ app.user.nom }}
            </h1>
            <p class="text-gray-400">Voici vos classes aujourd’hui</p>
        </div>
        <div class="text-primary bg-primary/10 px-4 py-2 rounded-full">
            {{ "now"|date("d/m/Y") }}
        </div>
    </div>

<!-- SECTION CLASSES ASSIGNÉES -->
<section>
    <h2 class="text-xl font-bold mb-2">Classes Assignées</h2>

    <!-- Barre de recherche pour les classes -->
    <input
        type="text"
        id="search-classes"
        placeholder="Rechercher une classe..."
        class="w-full mb-4 p-2 rounded-lg bg-surface-dark text-white border border-white/10 focus:outline-none focus:border-primary"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4" id="classes-list">
        {% for a in affectations %}
        <div class="class-item bg-surface-dark p-5 rounded-xl border border-white/5">
            <div class="flex justify-between mb-3">
                <span class="bg-blue-500/20 text-blue-400 px-3 py-1 rounded-full text-xs font-bold">
                    {{ a.classe.nom }}
                </span>
            </div>
            <h3 class="text-2xl font-bold">{{ a.matiere.libelle }}</h3>
            <p class="text-gray-400 text-sm mt-2">Année scolaire : {{ a.anneeScolaire }}</p>
            <a href="#" class="inline-block mt-4 bg-primary text-black font-bold px-4 py-2 rounded-full">Gérer</a>
        </div>
        {% else %}
            <p class="text-gray-400">Aucune classe assignée</p>
        {% endfor %}
    </div>
</section>

<!-- DERNIÈRES NOTES -->
    <section>
        <h2 class="text-xl font-bold mb-4">Dernières Notes</h2>
        <div class="space-y-4 bg-surface-dark p-5 rounded-xl border border-white/5">
            {% for note in dernieresNotes %}
            <div class="flex justify-between">
                <div>
                    <p class="font-bold">{{ note.eleve.prenom }} {{ note.eleve.nom }}</p>
                    <p class="text-xs text-gray-400">{{ note.matiere.libelle }} – {{ note.type }}</p>
                </div>
                <span class="text-primary font-bold">{{ note.valeur }}/20</span>
            </div>
            <hr class="border-white/5"/>
            {% else %}
                <p class="text-gray-400">Aucune note récente</p>
            {% endfor %}
        </div>
    </section>

<!-- LISTE DES ÉTUDIANTS -->
<section>
    <h2 class="text-xl font-bold mb-2">Liste des Étudiants</h2>

    <!-- Barre de recherche pour les étudiants -->
    <input
        type="text"
        id="search-students"
        placeholder="Rechercher un étudiant..."
        class="w-full mb-4 p-2 rounded-lg bg-surface-dark text-white border border-white/10 focus:outline-none focus:border-primary"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4" id="students-list">
        {% for etu in etudiants %}
        <div class="student-item bg-surface-dark p-4 rounded-xl border border-white/5 flex justify-between items-center hover:bg-white/5 transition-colors">
            <div>
                <p class="font-bold">{{ etu.eleve.prenom }} {{ etu.eleve.nom }}</p>
                <p class="text-xs text-gray-400">{{ etu.classe.nom }}</p>
            </div>
            <span class="material-symbols-outlined text-primary">person</span>
        </div>
        {% else %}
            <p class="text-gray-400">Aucun étudiant trouvé</p>
        {% endfor %}
    </div>
</section>

<!-- SCRIPT DE RECHERCHE -->
<script>
    // Recherche Classes
    const classInput = document.getElementById('search-classes');
    const classItems = document.querySelectorAll('.class-item');

    classInput.addEventListener('input', () => {
        const filter = classInput.value.toLowerCase();
        classItems.forEach(item => {
            const text = item.querySelector('h3').textContent.toLowerCase() + ' ' +
                         item.querySelector('span').textContent.toLowerCase();
            item.style.display = text.includes(filter) ? 'block' : 'none';
        });
    });

    // Recherche Étudiants
    const studentInput = document.getElementById('search-students');
    const studentItems = document.querySelectorAll('.student-item');

    studentInput.addEventListener('input', () => {
        const filter = studentInput.value.toLowerCase();
        studentItems.forEach(item => {
            const name = item.querySelector('p.font-bold').textContent.toLowerCase();
            const classe = item.querySelector('p.text-xs').textContent.toLowerCase();
            item.style.display = name.includes(filter) || classe.includes(filter) ? 'flex' : 'none';
        });
    });
</script>



</main>

</body>
</html>
